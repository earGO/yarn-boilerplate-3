{
  "name": "box-frontend",
  "version": "1.1.5",
  "private": true,
  "scripts": {
    "unit": "jest --watchAll",
    "make-version": "lerna version && yarn",
    "make-release": "lerna version --conventional-commits --create-release github --changelog-preset react && yarn",
    "storybook": "cd packages/storybook && start-storybook -p 9009 -s public",
    "build-storybook": "lerna exec --scope library-name -- babel src -d dist --copy-files --ignore \"src/stories/\"",
    "watch-storybook": "lerna exec --scope library-name -- babel src -d dist --watch --copy-files --ignore \"src/stories/\"",
    "start-front": "cd packages/apps/box-frontend && set PORT=2518 && react-scripts start",
    "clean": "oao clean",
    "status": "oao status",
    "remove-all": "oao remove-all",
    "mock-api": "cd .mock && json-server dbSeparateEndpointsV2.json --watch --port 3421",
    "build-local-styles": "cd packages/design-system-local && rollup -c"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components",
      "packages/storybook",
      "packages/utils",
      "packages/services",
      "packages/modules",
      "packages/design-system-local"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel-loader"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "core-js": "3",
    "fetch-mock": "^7.3.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.10.7",
    "oao": "^1.6.0",
    "prettier": "^1.16.1"
  },
  "dependencies": {
    "aphrodite": "^2.3.1",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 98,
        "lines": 98
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.{js,jsx}",
      "!src/serviceWorker.{js,jsx}",
      "!src/**/*.(spec|test|stories).{js,jsx}"
    ]
  }
}
